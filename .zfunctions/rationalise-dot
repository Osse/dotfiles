local MATCH dir split
split=(${(z)LBUFFER})
if (( $#split > 1 )); then
    dir=$split[-1]
else
    dir=$split
fi
if [[ $LBUFFER =~ '(^|/| | |'$'\n''|\||;|&)\.\.$' ]]; then
    LBUFFER+=/
    zle self-insert
    zle self-insert
    [[ -e $dir ]] && zle -M $dir(:a)
elif [[ $LBUFFER[-1] == '.' ]]; then
    zle self-insert
    [[ -e $dir ]] && zle -M $dir(:a)
else
    zle self-insert
fi
