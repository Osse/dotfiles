[difftool "vdwrap"]
	cmd = vdwrap $LOCAL $REMOTE
[merge]
	defaultToUpstream = true
	tool = nvimdiff
[pager]
	status = true
[pull]
	ff = true
[rebase]
	autosquash = true
[grep]
	lineNumber = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
